{
  "name": "ppmessage",
  "version": "1.0.0",
  "description": "ppMessage: An Ionic project",
  "main": "www/main.js",
  "scripts": {
    "start": "electron www/main.js",
    "dev": "electron ./www",
    "clean": "rm -rf ./electron/dist",
    "clean:osx": "rm -rf ./electron/dist/osx",
    "clean:win32": "rm -rf ./electron/dist/win32",
    "clean:win64": "rm -rf ./electron/dist/win64",
    "clean:linux": "rm -rf ./electron/dist/linux",
    "build": "npm run clean && npm run build:osx && npm run build:win32 && npm run build:win64 && npm run build:linux",
    "build:osx": "npm run clean:osx && electron-packager ./www \"ppmessage\" --out=electron/dist/osx --platform=darwin --arch=x64 --version=0.35.0 --icon=electron/assets/osx/ppmessage.icns --asar=true",
    "build:win32": "npm run clean:win32 && electron-packager ./www \"ppmessage-win32\" --out=electron/dist/win32 --platform=win32 --arch=ia32 --version=0.35.0 --icon=electron/assets/win/ppmessage.ico --asar=true",
    "build:win64": "npm run clean:win64 && electron-packager ./www \"ppmessage-win64\" --out=electron/dist/win64 --platform=win32 --arch=x64 --version=0.35.0 --icon=electron/assets/win/ppmessage.ico --asar=true",
    "build:linux": "npm run clean:linux && electron-packager ./www \"ppmessage\" --out=electron/dist/linux --platform=linux --arch=x64 --version=0.35.0 --asar=true",
    "pack": "npm run pack:osx && npm run pack:win && npm run pack:win64 && npm run pack:linux",
    "pack:osx": "npm run build:osx && electron-builder \"electron/dist/osx/ppmessage-darwin-x64/ppmessage.app\" --platform=osx --out=\"electron/dist/osx\" --config=electron/config.json",
    "pack:win32": "npm run build:win32 && electron-builder \"electron/dist/win32/ppmessage-win32-win32-ia32\" --platform=win --out=\"electron/dist/win32\" --config=electron/config-win32.json",
    "pack:win64": "npm run build:win64 && electron-builder \"electron/dist/win64/ppmessage-win64-win32-x64\" --platform=win --out=\"electron/dist/win64\" --config=electron/config-win64.json",
    "pack:linux": "npm run build:linux && electron-builder \"electron/dist/linux/ppmessage-linux-x64\" --platform=linux --out=\"electron/dist/linux\" --config=electron/config.json"
  },
  "dependencies": {
    "get-gulp-args": "^0.0.1",
    "gulp": "^3.5.6",
    "gulp-angular-templatecache": "^1.8.0",
    "gulp-concat": "^2.6.0",
    "gulp-jslint": "^0.2.2",
    "gulp-minify-css": "^0.3.0",
    "gulp-rename": "^1.2.0",
    "gulp-replace": "^0.5.4",
    "gulp-sass": "^2.0.4",
    "gulp-uglify": "^1.4.2",
    "gulp-util": "^3.0.7",
    "xml2json": "^0.9.0"
  },
  "devDependencies": {
    "bower": "^1.3.3",
    "electron-builder": "^2.1.1",
    "electron-packager": "^5.1.1",
    "electron-prebuilt": "^0.35.0",
    "shelljs": "^0.3.0"
  },
  "cordovaPlugins": [
    "cordova-plugin-crosswalk-webview",
    "cordova-plugin-whitelist",
    "cordova-plugin-statusbar",
    "cordova-plugin-contacts",
    "cordova-plugin-console",
    "cordova-plugin-splashscreen",
    "cordova-plugin-inappbrowser",
    "cordova-plugin-file",
    "cordova-plugin-file-transfer",
    "cordova-plugin-media-capture",
    "cordova-plugin-network-information",
    "cordova-plugin-dialogs",
    "cordova-plugin-geolocation",
    "cordova-plugin-vibration",
    "cordova-plugin-device-orientation",
    "cordova-plugin-device-motion",
    "cordova-plugin-device-name",
    "cordova-plugin-device",
    "cordova-plugin-camera",
    "cordova-open",
    "cordova-plugin-app-version",
    "https://github.com/keensoft/FullScreenImage-Cordova-Plugin.git",
    "https://github.com/brodysoft/Cordova-SQLitePlugin.git",
    "https://github.com/VersoSolutions/CordovaClipboard.git",
    "https://github.com/EddyVerbruggen/Toast-PhoneGap-Plugin.git",
    "https://github.com/dingguijin/cordova-plugin-media.git",
    "https://github.com/dingguijin/cordova-plugin-globalization.git",
    "https://github.com/dingguijin/cordova-plugin-mqtt.git",
    "https://github.com/dingguijin/com.phonegap.plugins.PushPlugin.git",
    "https://github.com/dingguijin/org.devgeeks.Canvas2ImagePlugin.git",
    {
      "locator": "https://github.com/dingguijin/cordova-plugin-mqtt.git",
      "id": "cordova-plugin-mqtt"
    }
  ],
  "cordovaPlatforms": [
    "ios",
    "android"
  ]
}
